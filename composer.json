{
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "behat/mink-selenium2-driver": "1.1.1",
        "magetest/magento-phpspec-extension": "~2.1.0",
        "magetest/magento-behat-extension": "dev-develop",
        "magetest/manager": "dev-feature/config-product-builder"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "MageTest\\PhpSpec\\MagentoExtension": "src",
            "": [
                "public/app/code/local",
                "public/app/code/community",
                "public/app/code/core",
                "public/app",
                "public/lib"
            ],
            "Mage" : "public/app/code/core"
        }
    }
}
